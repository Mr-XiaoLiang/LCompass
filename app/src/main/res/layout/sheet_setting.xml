<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    app:layout_behavior="@string/BottomSheetBehavior"
    tools:context="com.liang.lollipop.lcompass.activity.SettingActivity"
    android:id="@+id/sheet_setting_root"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_circle"
            android:elevation="2dp"
            android:src="@drawable/bg_circle"
            android:tint="@android:color/white"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_circle"
            android:elevation="2dp"
            android:src="@drawable/bg_circle"
            android:tint="@android:color/white"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_circle"
            android:elevation="2dp"
            android:src="@drawable/bg_circle"
            android:tint="@android:color/white"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sheet_setting_preference"
            android:name="com.liang.lollipop.lcompass.fragment.SettingsFragment"/>
    </FrameLayout>
</LinearLayout>
