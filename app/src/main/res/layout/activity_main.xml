<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liang.lollipop.lcompass.activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/background"
        android:id="@+id/background_body"/>
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle"
        android:elevation="3dp"/>
    <ImageView
        android:id="@+id/foreground_img"
        android:elevation="5dp"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="30dp">

        <ImageView
            android:src="@drawable/ic_bubble_chart_black_24dp"
            android:id="@+id/model_change_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"/>

        <ImageView
            android:src="@drawable/ic_explore_black_24dp"
            android:id="@+id/type_change_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"/>

        <ImageView
            android:visibility="gone"
            android:tint="#FF888888"
            android:id="@+id/setting_img"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="70dp"
        android:gravity="center">
        <TextView
            android:textStyle="bold"
            android:id="@+id/angle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/status_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_circle"
            android:elevation="2dp"/>
    </LinearLayout>
</FrameLayout>
