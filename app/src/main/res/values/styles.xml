<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WhiteSeekBar" parent="Base.Widget.AppCompat.SeekBar" >
        <item name="colorControlActivated">#FFF</item>
        <item name="colorControlNormal">#8FFF</item>
        <item name="android:colorControlHighlight">#AFFF</item>
    </style>

    <style name="GraySeekBar" parent="Base.Widget.AppCompat.SeekBar" >
        <item name="colorControlActivated">#595959</item>
        <item name="colorControlNormal">#884b4b4b</item>
        <item name="android:colorControlHighlight">#AA404040</item>
    </style>
    <style name="RedSeekBar" parent="Base.Widget.AppCompat.SeekBar" >
        <item name="colorControlActivated">#F00</item>
        <item name="colorControlNormal">#8F00</item>
        <item name="android:colorControlHighlight">#AF00</item>
    </style>
    <style name="GreenSeekBar" parent="Base.Widget.AppCompat.SeekBar" >
        <item name="colorControlActivated">#0F0</item>
        <item name="colorControlNormal">#80F0</item>
        <item name="android:colorControlHighlight">#A0F0</item>
    </style>
    <style name="BlueSeekBar" parent="Base.Widget.AppCompat.SeekBar" >
        <item name="colorControlActivated">#00F</item>
        <item name="colorControlNormal">#800F</item>
        <item name="android:colorControlHighlight">#A00F</item>
    </style>

</resources>
